<label>
	<input type="radio" name="dataType" value="xml"/>XML
</label>
<button type="button" class="loadData">LOAD DATA</button>
<button type="button" class="loadData">CLEAR DATA</button>
<table border="3px">
	<thead>
		<tr>
			<th>key</th>
			<th>value</th>
		</tr>
	</thead>
	<tbody id="listBody" >
	
	</tbody>
</table>
<script type="text/javascript">
	let listBody = $("#listBody");
	let dataTypes = $("[name=dataType]");
	let markTrTag=function(name, value){
		let tr = $("<tr>").append(
				$("<td>").html(name),	
				$("<td>").html(value)		
			);
		return tr;
	}
	let sucesses = {
		json:function(resp){
			let trTags = [];
			$.each(resp,function(name, value){
				trTags.push(markTrTag(name, value));
			})
			listBody.empty();
			listBody.append(trTags);
		},		
		xml:function(domResp){
			let root = $(domResp).find("Properties");
			rood.children().each(function(idx,child){
				console.log(child.tagName);
				console.log(child.innerHTML);
				let name = child.tagName;
				let value = child.innerHTML;
				let tr = maketTrTag(name, value);
			});
		}
	}
	let btn = $(".loadData").on("click",function(){
		let dataType = dataTypes.filter(":checked").val();	
		$.ajax({
				dataType : dataType,
				success : sucesses[dataType],
				error : function(jqXHR, status, error) {
					console.log(jqXHR);
					console.log(status);
					console.log(error);
				}
			});	
		});
		let clearBtn = $(".clearData").on("click",function(){
			listBody.empty();
		});
</script>
</body>
