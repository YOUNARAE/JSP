<script type="text/javascript">
let listBody = $("#listBody");

let btn = $(".loadData").on("click",function(){
	var check = $('input:radio[name="dataType"]:checked').val();
	alert(check);
	
	if(check.equals("xml")){
		$.ajax({
			dataType : "xml",
			success : function(resp) { //3,4의 작업이 끝나서 들어오는 게 resp->원형은 properties 형태였다는 의미다.		
				let trTags = [];
				$.each(resp,function(name, value){
					let tr = $("<tr>").append(
						$("<td>").html(name),	
						$("<td>").html(value)		
					);
					trTags.push(tr);
				})
			
				listBody.empty();
				listBody.append(trTags);
			},
			error : function(jqXHR, status, error) {
				console.log(jqXHR);
				console.log(status);
				console.log(error);
			}
		});	
	} else if(check=="json") {
		
	}
	
})
</script>
