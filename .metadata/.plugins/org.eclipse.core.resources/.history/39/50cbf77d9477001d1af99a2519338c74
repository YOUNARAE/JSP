<label>
	<input type="radio" name="dataType" value="xml"/>XML
</label>
<button type="button" class="loadData">LOAD DATA</button>
<table border="3px">
	<thead>
		<tr>
			<th>key</th>
			<th>value</th>
		</tr>
	</thead>
	<tbody id="listBody" >
	
