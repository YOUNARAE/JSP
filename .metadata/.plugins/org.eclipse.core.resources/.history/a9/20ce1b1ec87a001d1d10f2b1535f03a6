package kr.or.ddit.servlet05;

import java.io.IOException;
import java.util.Date;
import java.util.Locale;
import java.util.ResourceBundle;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet("/05/getServerTime")
public class GetServerTimeControllerServlet extends HttpServlet{
	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		
		//1번단계
		String accept = req.getHeader("Accept");
		String localeParam = req.getParameter("locale");
		
		Locale clientLocale = null;
		if(localeParam!=null) {
			clientLocale = Locale.forLanguageTag(localeParam);
		} else {
			clientLocale = req.getLocale();
		}
		
		//2모델확보
		Date now = new Date();
		String nowStr = String.format(Locale.CANADA, "now : %tc",now);
		//3모델공유
		req.setAttribute("now", nowStr);//toString()
		resp.setHeader("Refresh", "1");
		//4.뷰선택
		String viewName = null;
		int statusCode = HttpServletResponse.SC_OK;
		if(accept.contains("json")) {
			viewName = "/jsonView.do";
		} else if(accept.contains("plain")){
			viewName = "/WEB-INF/views/04/plainView.jsp"; //모델 선택
		} else {
			statusCode = HttpServletResponse.SC_NOT_ACCEPTABLE;
		}
		
		
		req.getRequestDispatcher(viewName).forward(req,resp);
	}
	
	private Object retrieveMessage(Locale clientLocale, String name) {
//      베이스 네임에는 확장자와 로케일도 포함이 안된다
		String baseName = "kr.or.ddit.props.Message";
		ResourceBundle bundle = ResourceBundle.getBundle(baseName, clientLocale);
		return bundle.getString(name);
	}
}
